@model List<Post>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="~/css/index.css">
<div class="container">
    <div class="row">
        <div class="col-12 text-end">
            <a asp-controller="Post" asp-action="Create" class="btn btn-primary"><i class="bi bi-pencil"></i> Write your post</a>
        </div>
    </div>
    @foreach (var post in Model)
    {
        <div class="post-item">
            <img src="@post.ImageUrl" alt="Cover Photo">
            <div class="post-content">
                <h2 class="post-title">
                    <a asp-action="Details" asp-controller="Post" asp-route-id="@post.Guid">@post.Title</a>
                </h2>
                <h3 class="post-item">
                    <i class="bi bi-clock-history"></i> @post.CreatedAt.ToString("g");
                </h3>
            </div>
        </div>
    }
</div>
