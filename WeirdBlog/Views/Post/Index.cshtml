@model List<Post>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="~/css/index.css">
<div class="text-center">
    <h1 class="display-4">All Posts</h1>

</div>
<div class="container">
    <div class="row">
        <div class="col-12 text-end">
            <a asp-controller="Post" asp-action="Create" class="btn btn-primary"><i class="bi bi-pencil"></i> Write your post</a>
        </div>
    </div>
    @foreach (var post in Model)
    {
        <div class="post-item">
            <img src="@post.ImageUrl" alt="Cover Photo">
            <div class="post-content">
                <h2 class="post-title">
                    <a asp-action="Details" asp-controller="Post" asp-route-id="@post.Guid">@post.Title</a>
                </h2>
                <h3 class="post-item">
                    <i class="bi bi-clock-history"></i> @post.CreatedAt.ToString("g").Trim(';');
                </h3>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Post" asp-action="Edit" asp-route-id="@post.Guid" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-controller="Post" asp-action="Delete" asp-route-id="@post.Guid" class="btn btn-danger mx-2">
                        <i class="bi bi-x-octagon-fill"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    }
</div>
