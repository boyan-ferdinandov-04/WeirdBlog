@model PostVM

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-white py-2">Update Product</h1>

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" onsubmit="handleSubmit()">
            <input asp-for="Post.PostId" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-4">
                <label asp-for="Post.Title" class="control-label"></label>
                <div class="col-12">
                    <input asp-for="Post.Title" class="form-control form-control-lg w-100" aria-required="true" />
                    <span asp-validation-for="Post.Title" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-4 row">
                <label asp-for="Post.Content" class="control-label"></label>
                <div class="col-12">
                    <div id="editor" style="min-height: 300px; border: 1px solid #ccc; padding: 10px; margin-bottom: 60px;"></div>
                    <textarea name="Post.Content" id="quillContent" class="d-none"></textarea>
                </div>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Post.CategoryId" class="control-label"></label>
                <div class="col-12">
                    <select asp-for="Post.CategoryId" class="form-control form-control-lg w-100" asp-items="@Model.Categories" aria-required="true">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="Post.CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Post.ImageUrl" class="control-label"></label>
                <div class="col-12">
                    <input asp-for="Post.ImageUrl" class="form-control form-control-lg w-100 border-0 shadow" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-4">
                    <input type="submit" value="Update" class="btn btn-warning w-100 btn-lg" />
                </div>
                <div class="col-sm-4">
                    <a asp-action="Index" class="btn btn-secondary w-100 btn-lg">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/quill@2.0.2/dist/quill.js"></script>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

    <script>
        // Initialize Quill editor
        let quill = new Quill('#editor', {
            theme: 'snow',
            modules: {
                toolbar: true
            }
        });

        quill.root.innerHTML = `@Html.Raw(Model.Post.Content ?? "")`;

        function handleSubmit() {
            document.getElementById('quillContent').value = quill.root.innerHTML;
            console.log(document.getElementById('quillContent').value); 
        }

    </script>

    <partial name="_ValidationScriptsPartial" />
}

